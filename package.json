{
  "name": "leaf-storymaps-wrapper",
  "version": "0.0.1",
  "main": "main.js",
  "private": true,
  "author": "Interactive Knowledge",
  "build": {
    "appId": "com.interactiveknowledge.storymaps",
    "productName": "Story Map Wrapper",
    "directories": {
      "buildResources": "./",
      "output": "release"
    },
    "files": [
      "!.{DS_Store,eslintignore,eslintrc.yml,gitignore,sass-lint.yml}",
      "!README.md",
      "!src",
      "!release",
      "!public"
    ],
    "nsis": {
      "oneClick": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    }
  },
  "postinstall": "electron-builder install-app-deps",
  "scripts": {
    "build": "grunt",
    "build-release": "electron-builder -mw",
    "build-release-mac": "electron-builder -m",
    "build-release-windows": "electron-builder -w",
    "start": "ENV=production node server/index.js",
    "start-dev": "ENV=dev node server/index.js",
    "start-dev-electron": "ENV=dev electron .",
    "start-electron": "ENV=prod electron ."
  },
  "devDependencies": {
    "csso": "~1.3.10",
    "electron": "^5.0.8",
    "electron-builder": "^21.1.5",
    "grunt": "~0.4.1",
    "grunt-contrib-clean": "~0.4.0",
    "grunt-contrib-concat": "^0.5.0",
    "grunt-contrib-connect": "~0.3.0",
    "grunt-contrib-copy": "~0.4.1",
    "grunt-contrib-jshint": "~0.4.3",
    "grunt-contrib-requirejs": "~0.4.1",
    "grunt-contrib-watch": "~0.5.1",
    "grunt-execute": "^0.2.2",
    "grunt-mkdir": "~0.1.1",
    "grunt-regex-replace": "~0.2.5",
    "load-grunt-tasks": "~0.3.0"
  },
  "browserslist": "electron 1.8",
  "dependencies": {
    "express": "^4.17.1",
    "jquery": "^3.4.1",
    "underscore": "^1.9.1"
  }
}
