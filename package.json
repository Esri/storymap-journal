{
  "name": "leaf-storymaps-wrapper",
  "version": "0.0.1",
  "main": "main.js",
  "private": true,
  "author": "Interactive Knowledge",
  "postinstall": "electron-builder install-app-deps",
  "scripts": {
    "build": "grunt",
    "build-release": "yarn run prepare && BUILD_TARGET=electron electron-builder -mw --config=build.json",
    "build-release-mac": "yarn run prepare && BUILD_TARGET=electron electron-builder -m --config=build.json",
    "build-release-windows": "yarn run prepare && BUILD_TARGET=electron electron-builder -w --config=build.js",
    "prepare": "yarn run build && yarn run set-env",
    "set-env": "node -r dotenv/config builder.js",
    "start": "ENV=production BUILD_TARGET=browser node server/index.js",
    "start-dev": "ENV=dev BUILD_TARGET=browser node main.js",
    "start-dev-electron": "ENV=dev BUILD_TARGET=electron electron .",
    "start-electron": "ENV=production BUILD_TARGET=electron electron ."
  },
  "devDependencies": {
    "csso": "~1.3.10",
    "electron": "^5.0.8",
    "electron-builder": "^21.1.5",
    "grunt": "^1.0.4",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-connect": "^1.0.2",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-jshint": "^1.0.0",
    "grunt-contrib-requirejs": "^1.0.0",
    "grunt-contrib-watch": "^1.0.1",
    "grunt-execute": "^0.2.2",
    "grunt-mkdir": "~0.1.1",
    "grunt-regex-replace": "~0.2.5",
    "load-grunt-tasks": "~0.3.0"
  },
  "browserslist": "electron 1.8",
  "dependencies": {
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jquery": "^3.4.1",
    "jsona": "^1.5.0",
    "lodash": "^4.17.15",
    "request": "^2.88.0",
    "underscore": "^1.9.1"
  }
}
